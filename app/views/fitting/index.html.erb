<%= render 'sidebar' %>
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title" data-bind="text: header"></h3>
        </div>
        <div class="pull-right">
          <%= link_to 'New', new_user_fitting_path(current_user), :class => 'btn btn-large btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid padded">
    <div class="row-fluid">
      <ul class="thumbnails" data-bind="template:{name:'fitting',foreach:fittings}"></ul>
      </div>
    </div>
  </div>
</div>
<script type="text/html" id="fitting">
  <li class="span2">
    <a data-bind="attr:{href:url}" class="thumbnail">
      <img data-bind="attr:{src:image, title:name}" />
      <div class="caption">
        <h4 data-bind="text:name"></h4>
        <!-- ko with: ship -->
        <span data-bind="text:typeName"></span>
        <!-- /ko -->
      </div>
    </a>
  </li>
</script>
<script type="text/javascript">
  evefits.fittings.list.init();
</script>