<div class="container-fluid">
  <div class="row-fluid">
    <div class="area-top clearfix">
      <div class="pull-left header">
        <h3 class="title" data-bind="text: header"></h3>
      </div>
      <div class="pull-right">
        <%= link_to 'New Fitting', new_fitting_path, :class => 'btn btn-large btn-primary' %>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid padded">
  <div class="row-fluid">
    <ul class="thumbnails" data-bind="template:{name:'fitting',foreach:fittings}"></ul>
    <!-- ko if: fittings().length === 0 -->
    <div class="span5 offset3">
      <div class="well alert-info">
        <p class="lead">You don't have any fittings yet.</p>
        <p>It's super easy to create a new fitting. Just click on the bright blue button that says "New Fitting".</p>
      </div>
    </div>
    <!-- /ko -->
  </div>
</div>
<script type="text/html" id="fitting">
  <li class="span2">
    <a data-bind="attr:{href:url}" class="thumbnail">
      <img data-bind="attr:{src:image, title:name}" />
      <div class="caption">
        <h4 data-bind="text:name"></h4>
        <!-- ko with: ship -->
        <span data-bind="text:typeName"></span>
        <!-- /ko -->
      </div>
    </a>
  </li>
</script>
<script type="text/javascript">
$(function() {
  evefits.fittings.list.init();
  evefits.user.characters.init({id:'user-nav'});
});
</script>